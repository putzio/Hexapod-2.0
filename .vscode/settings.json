{
    "testMate.cpp.debug.configTemplate": {
        "type": "cppvsdbg",
        "linux": { "type": "cppdbg", "MIMode": "gdb" },
        "darwin": { "type": "cppdbg", "MIMode": "lldb" },
        "win32": { "type": "cppvsdbg" },
        "program": "${exec}",
        "args": "${argsArray}",
        "cwd": "${cwd}",
        "env": "${envObj}",
        "environment": "${envObjArray}",
        "sourceFileMap": "${sourceFileMapObj}"
    },
    // "testMate.cpp.test.executables": ".pio/build/native/program.exe",
    "testMate.cpp.test.advancedExecutables": [
        {
            "pattern": ".pio/build/native/program.exe",
            "runTask": {
                "before": [
                    "PlatformIO: Test"
                ]
            }

        }
    ]
    // "{build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST}*"
}